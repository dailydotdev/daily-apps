{
  "name": "@daily/extension",
  "version": "2.1.6",
  "private": true,
  "scripts": {
    "serve": "TARGET=development yarn manifest && vue-cli-service build --mode development --watch",
    "build": "yarn manifest && vue-cli-service build",
    "build:chrome": "TARGET=chrome yarn build --mode chrome",
    "build:firefox": "TARGET=firefox yarn build --mode firefox",
    "build:all": "yarn build:chrome && yarn build:firefox && yarn zip:src",
    "test": "yarn lint && vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test:ci": "JEST_JUNIT_OUTPUT=../../test-results/extension/junit.xml vue-cli-service test:unit --ci --reporters=jest-junit",
    "zip:src": "node build/zip-src.js",
    "manifest": "node build/manifest.js"
  },
  "dependencies": {
    "@daily/components": "^0.2.0",
    "@daily/services": "^0.1.0",
    "dompurify": "^1.0.10",
    "focus-visible": "^4.1.5",
    "lazysizes": "^4.1.8",
    "vue": "^2.5.17",
    "vue-masonry-css": "^1.0.3",
    "vue-router": "^3.0.2",
    "vue-svgicon": "^3.2.2",
    "vuex": "^3.0.1",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.2",
    "@vue/babel-preset-app": "^3.5.5",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-plugin-unit-jest": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/preload-webpack-plugin": "^1.1.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "archiver": "^3.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "chalk": "^2.4.2",
    "core-js": "^2",
    "deepmerge": "^3.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0-0",
    "imports-loader": "^0.8.0",
    "jest": "^23.6.0",
    "jest-junit": "^6.4.0",
    "ora": "^3.3.0",
    "postcss-custom-media": "^7.0.7",
    "postcss-mixins": "^6.2.1",
    "postcss-nested": "^4.1.2",
    "vue-cli-plugin-browser-extension": "^0.14.0",
    "vue-template-compiler": "^2.5.17",
    "workbox-webpack-plugin": "^4.1.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "webextensions": true
    },
    "globals": {
      "ga": true,
      "browser": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/airbnb"
    ],
    "rules": {
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "state"
          ]
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/[^.]*.(js|jsx|ts|tsx)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testURL": "http://localhost/"
  }
}
