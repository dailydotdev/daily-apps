{
  "manifest_version": 2,
  "version": "0.0.0",
  "name": "daily.dev - News for Busy Developers",
  "short_name": "daily.dev",
  "description": "daily.dev is the easiest way to stay updated on the latest programming news",
  "homepage_url": "https://daily.dev",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "optional_permissions": [
    "topSites"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/action_16.png",
      "32": "icons/action_32.png"
    }
  },
  "web_accessible_resources": [
    "index.html"
  ]
}
