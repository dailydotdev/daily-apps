.insane {
  width: 100%;
  flex-direction: row;
  padding: 4px 0;

  & .post__title, & .post__comment-name {
    margin: 4px 0;
  }

  & .post__metadata, & .post__comment-content {
    margin-top: 4px;
  }

  & .post__link, & .post__comment {
    margin-top: 10px;
  }

  & .post__vseparator {
    align-self: stretch;
  }
}

.insane__main, .insane__sub {
  display: flex;
  flex-direction: column;
}

.insane__sub {
  align-items: center;
  padding: 0 16px;
}

.insane__main {
  flex: 1;
  padding: 0 24px 0 16px;
}
