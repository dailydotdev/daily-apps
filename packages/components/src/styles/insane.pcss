.insane {
    display: flex;
    width: 100%;
    padding: 14px 24px;
    flex-direction: row;
    background: var(--theme-background-highlight);
    align-items: center;
    border-bottom: 1px solid var(--theme-background-primary);
    overflow: hidden;

    .roomy & {
        padding: 18px 32px;
    }

    .cozy & {
        padding: 22px 40px;
    }
}

.insane__link {
    flex: 1;
    text-decoration: none;
}

.insane__title {
    color: var(--theme-primary);
}
