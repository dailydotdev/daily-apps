{
  "name": "@daily/services",
  "version": "0.1.0",
  "description": "Shared services for the apps",
  "author": "Ido Shamun <ido@elegantmonkeys.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elegantmonkeys/daily-apps.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "JEST_JUNIT_OUTPUT=../../test-results/services/junit.xml jest --ci --reporters=jest-junit",
    "build": "rollup -c",
    "watch": "rollup -cw"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/jsdom": "^16.2.4",
    "@types/nock": "^11.1.0",
    "cross-fetch": "^3.0.5",
    "jest": "^26.0.0",
    "jest-junit": "^6.4.0",
    "jsdom": "^16.4.0",
    "nock": "^13.0.4",
    "rollup": "^2.29.0",
    "rollup-plugin-typescript2": "^0.28.0",
    "ts-jest": "^26.1.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/es6-promise": "^3.3.0",
    "redaxios": "^0.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
